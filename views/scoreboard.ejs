<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style1.css" />
  </head>
  <body>
    <img id="firstimage" src="images/1.png" alt="" />
    <img id="secondimage" src="images/2.png" alt="" />
    <main>
      <div id="header">
        <h1>Ranking</h1>
        <button class="share"><i class="ph ph-share-network"></i></button>
      </div>
      <div id="leaderboard">
        <div class="ribbon"></div>
        <table>
          <% for (let i = 0; i < users.length; i++) { %>
          <tr>
            <td class="number"><%= i+1 %> %></td>
            <td class="name"><%= users[i].N %></td>
            <td class="points">
              <% if (i==0){ %> <%= Math.floor(users[i].S ) %>
              <img
                class="gold-medal"
                src="images/pngwing.com.png"
                alt="gold medal"
              />
              <% } else{%> <%=  Math.floor(users[i].S ) %> <%} %>
            </td>
          </tr>
          <% } %>
        </table>
      </div>
      <div class="btn"><a href="https://fast-typing-competition.onrender.com/">Home</a></div>
    </main>
    <img id="BGIMG" src="images/3.png" alt="" />
    <img class="BGIMG" src="images/3.png" alt="" />
  </body>
</html>
